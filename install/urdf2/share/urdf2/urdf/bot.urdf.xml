<?xml version="1.0"?>
<robot name="mybot"
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <gazebo reference="base_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <link name="base_footprint">

    </link>
    <link name="base_link">

        <inertial>
            <mass value="6.0"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.85" iyz="0.0" izz="0.125"/>
        </inertial>

        <visual>
            <geometry>
                <box size="0.4 0.3 0.1"/>
            </geometry>
            <material name="black">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.3 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <link name="front_right_wheel">
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.00039" ixy="0.0" ixz="0.0" iyy="0.00039" iyz="0.0" izz="0.00072"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="1.0 0.0 0.0 0.5"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
        </collision>
    </link>
    <joint name="front_right_wheel_joint" type="continuous">
        <origin xyz="0.12 -0.15 -0.05" rpy="-1.5708 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="front_left_wheel">
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.00039" ixy="0.0" ixz="0.0" iyy="0.00039" iyz="0.0" izz="0.00072"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
        </collision>
    </link>
    <joint name="front_left_wheel_joint" type="continuous">
        <origin xyz="0.12 0.15 -0.05" rpy="-1.5708 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>
    <link name="back_right_wheel">
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.00039" ixy="0.0" ixz="0.0" iyy="0.00039" iyz="0.0" izz="0.00072"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
        </collision>
    </link>
    <joint name="back_right_wheel_joint" type="continuous">
        <origin xyz="-0.12 -0.15 -0.05" rpy="-1.5708 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>
    <link name="back_left_wheel">
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.00039" ixy="0.0" ixz="0.0" iyy="0.00039" iyz="0.0" izz="0.00072"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
        </collision>
    </link>
    <joint name="back_left_wheel_joint" type="continuous">
        <origin xyz="-0.12 0.15 -0.05" rpy="-1.5708 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="RPlidar_base">
        <visual>
            <geometry>
                <box size= "0.05 0.05 0.05" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="RPlida_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="RPlidar_base"/>
        <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="RPlidar">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <joint name="RPlidar_joint" type="fixed">
        <parent link="RPlidar_base"/>
        <child link="RPlidar"/>
        <origin xyz="0.0 0.0 0.034" rpy="0.0 0.0 0.0"/>
    </joint>

    <gazebo>
        <plugin name='skid_steer_drive' filename='libgazebo_ros_diff_drive.so'>

            <ros>
            </ros>

            <num_wheel_pairs>2</num_wheel_pairs>

            <left_joint>front_left_wheel_joint</left_joint>
            <right_joint>front_right_wheel_joint</right_joint>

            <left_joint>back_left_wheel_joint</left_joint>
            <right_joint>back_right_wheel_joint</right_joint>

            <wheel_separation>0.3</wheel_separation>
            <wheel_separation>0.3</wheel_separation>

            <wheel_diameter>0.12</wheel_diameter>
            <wheel_diameter>0.12</wheel_diameter>

            <max_wheel_torque>6.16</max_wheel_torque>
            <max_wheel_acceleration>1</max_wheel_acceleration>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <command_topic>cmd_vel</command_topic>
            <odometry_topic>odom</odometry_topic>

            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>
        </plugin>
    </gazebo>
    



</robot>
